<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.atliz.Home">

    <EditText
        android:id="@+id/etKg"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Kg"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="62dp" />

        <EditText
            android:id="@+id/etMoney"
            android:layout_width="171dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="$"

            app:layout_constraintBottom_toBottomOf="@+id/etKg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etKg"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_marginRight="36dp" />

        <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/etKg"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/etKg"
        app:layout_constraintLeft_toRightOf="@+id/etKg" />

    <TextView
        android:id="@+id/kg"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:text="kg"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/etKg"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/etKg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintHorizontal_bias="0.34" />

    <TextView
        android:id="@+id/inmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In money"
        android:visibility="gone"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/etMoney"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMoney"
         />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"

        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="שומן"
        android:textStyle="bold"

        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/checkBox"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/etMoney"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintRight_creator="1"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        app:layout_constraintRight_toLeftOf="@+id/checkBox2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"

        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <Button
        android:id="@+id/cart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Add to cart"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add a message:"

        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editText6"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="81dp"
        android:layout_height="97dp"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="398dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/meat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meat"
            android:visibility="gone"
            tools:layout_editor_absoluteX="-397dp"
            tools:layout_editor_absoluteY="556dp" />

        <Button
            android:id="@+id/chicken"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="chicken"
            android:visibility="gone"
            tools:layout_editor_absoluteX="-397dp"
            tools:layout_editor_absoluteY="556dp" />

        <Button
            android:id="@+id/cow"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="cow"
            android:visibility="gone"
            tools:layout_editor_absoluteX="-397dp"
            tools:layout_editor_absoluteY="556dp" />

        <Button
            android:id="@+id/grill"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="meat for grill"
            android:visibility="gone"
            tools:layout_editor_absoluteX="-397dp"
            tools:layout_editor_absoluteY="556dp" />

        <Button
            android:id="@+id/stake"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="stake"
            android:visibility="gone"
            tools:layout_editor_absoluteX="-397dp"
            tools:layout_editor_absoluteY="556dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
